<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp">


            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/menu_button_start"
                android:padding="@dimen/menu_btn_padding"
                android:src="@drawable/ic_menu"
                android:tint="@color/textColor" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="@string/setting"
                android:textColor="@color/textColor"
                android:textSize="@dimen/heading_text" />

        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:fillViewport="true"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="17dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="@string/theme"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size" />


                    <ToggleButton
                        android:id="@+id/theme_btn"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_switch_off"
                        android:gravity="end"
                        android:textOff=""
                        android:textOn=""
                        android:visibility="visible" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lite_gray_line" />


                <RelativeLayout
                    android:id="@+id/rlt_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="17dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="@string/change_password"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_arrow_right" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lite_gray_line" />

                <RelativeLayout
                    android:id="@+id/privacy_layout"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="17dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:includeFontPadding="false"
                        android:text="@string/privacy_policy"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lite_gray_line" />

                <RelativeLayout
                    android:id="@+id/terms_layout"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="17dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:includeFontPadding="false"
                        android:text="@string/terms_condition"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_size" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lite_gray_line" />

                <RelativeLayout
                    android:id="@+id/rl_contact_us"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="17dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/contact_us"
                            android:textAlignment="viewStart"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/order_detail_adapter" />

                        <TextView
                            android:id="@+id/contact_us_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/poppins"
                            android:text="@string/contact_us"
                            android:textColor="@color/text_color_gray"
                            android:textSize="@dimen/text_size" />


                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lite_gray_line"
                    tools:visibility="gone" />

