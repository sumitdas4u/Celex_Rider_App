<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="10dp"
        android:background="@color/background_color">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"

                android:ellipsize="end"
                android:maxLines="1"
                android:text="12/2/2012"
                android:background="@color/banana"
                android:textAlignment="viewStart"
                android:textColor="@color/cardview_dark_background"
                android:textSize="@dimen/normal_text" />
            <ImageView
                android:id="@+id/img_start"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:background="@drawable/image_placeholder" />


            <TextView
                android:id="@+id/tv_start_km"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:maxLines="1"
                android:text="22312 km"
                android:textAlignment="viewStart"
                android:background="@color/basil"
                android:textColor="@color/standard_white"
                android:textSize="@dimen/normal_text"

                />

            <ImageView
                android:id="@+id/img_end"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:background="@drawable/image_placeholder" />


            <TextView
                android:id="@+id/tv_end_km"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:maxLines="1"
                android:text="22312 km"
                android:background="@color/red"
                android:textColor="@color/standard_white"
                android:textSize="@dimen/normal_text"

                />`
            <TextView
                android:id="@+id/tv_total_km"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:maxLines="1"
                android:text="12 km"
                android:background="@color/blue"
                android:textColor="@color/standard_white"
                android:textSize="@dimen/normal_text"

                />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>