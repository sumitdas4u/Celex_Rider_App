        android:shape="rectangle">
        <corners
            android:bottomRightRadius="10dp"
            android:topRightRadius="10dp"
            android:topLeftRadius="10dp"
            android:bottomLeftRadius="0dp"/>
        <solid android:color="@color/App_color"></solid>
    </shape>
</item>
</layer-list>