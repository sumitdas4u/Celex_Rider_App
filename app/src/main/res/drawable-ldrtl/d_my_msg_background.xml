            android:topRightRadius="10dp"
            android:topLeftRadius="10dp"
            android:bottomLeftRadius="0dp"/>
        <solid android:color="@color/App_color" />
    </shape>
</item>
<item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
